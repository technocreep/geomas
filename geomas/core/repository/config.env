# Default configuration for GeoMAS repository components.
# Duplicate this file and customise the values to suit your environment.
# The demos load these settings automatically via ``load_repository_env``.

# --- Chroma vector database -------------------------------------------------
CHROMA_HOST=
CHROMA_PORT=
CHROMA_ALLOW_RESET=false
CHROMA_CLIENT_MODE=persistent
CHROMA_PERSIST_PATH=./chroma_storage

# --- Embedding service ------------------------------------------------------
EMBEDDING_HOST=
EMBEDDING_PORT=
EMBEDDING_ENDPOINT=/embed
EMBEDDING_MODE=local

# --- Reranker service -------------------------------------------------------
RERANKING_ENABLED=false
RERANKER_HOST=
RERANKER_PORT=
RERANKER_ENDPOINT=/rerank

# --- Storage locations ------------------------------------------------------
PARSE_RESULTS_PATH=./parse_results
PAPERS_STORAGE_PATH=./papers
USE_S3=false

# --- LLM endpoints ----------------------------------------------------------
SUMMARY_LLM_URL=
VISION_LLM_URL=
LLM_SERVICE_URL=
LLM_OCR_URL=
IMAGE_RESOLUTION_SCALE=2.0
